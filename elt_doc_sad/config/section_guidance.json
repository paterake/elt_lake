{
  "Document History": {
    "description": "Version control and change log for the SAD document",
    "content_type": "table",
    "columns": ["Version", "Date", "Author", "Changes"],
    "guidance": "Record all versions including draft versions. Note significant changes in the Changes column."
  },
  "Document Review": {
    "description": "List of reviewers who have reviewed the SAD",
    "content_type": "table",
    "columns": ["Name", "Role", "Date", "Signature"],
    "guidance": "Include technical reviewers, business stakeholders, and security reviewers."
  },
  "Approvals": {
    "description": "Formal approvals for the SAD",
    "content_type": "table",
    "columns": ["Name", "Role", "Date", "Signature"],
    "guidance": "Include approvers from architecture, security, and business leadership."
  },
  "Reference Documents": {
    "description": "Related documentation and resources",
    "content_type": "list",
    "guidance": "Link to design documents, SOWs, vendor documentation, and related SADs."
  },
  "1.1 Objectives": {
    "description": "Primary objectives of implementing the integration",
    "should_include": [
      "Business goals the integration addresses",
      "Technical objectives",
      "Success criteria",
      "What is explicitly excluded from scope"
    ],
    "example_topics": [
      "Automated provisioning of data to vendor platform",
      "Secure data transmission using encryption",
      "Compliance with GDPR and data protection standards",
      "Support for employee/customer initiatives",
      "Alignment with Adopt, Automate, Secure, Simplify principles"
    ],
    "typical_length": "5-10 bullet points plus exclusions"
  },
  "1.2 Functionality": {
    "description": "Detailed description of what the solution does",
    "should_include": [
      "Component breakdown (typically 2-4 components)",
      "Data flow description",
      "Implementation pattern",
      "Scheduling or triggering mechanism",
      "File formats and encoding (if applicable)"
    ],
    "example_topics": [
      "EIB custom report configuration",
      "Document Transformation for format conversion",
      "File format (CSV, XML) and encoding (UTF-8)",
      "Delivery mechanism (SFTP, API, email)",
      "Full vs incremental extracts",
      "File naming conventions"
    ],
    "typical_length": "1-2 paragraphs plus bullet points"
  },
  "1.3 Constraints": {
    "description": "Technical and business limitations",
    "should_include": [
      "Compliance requirements",
      "Technical limitations",
      "Vendor limitations",
      "Security requirements"
    ],
    "example_topics": [
      "GDPR and UK data protection requirements",
      "File format constraints from vendor",
      "Encryption requirements (PGP, TLS)",
      "Vendor environment limitations (no test environment)",
      "File naming conventions"
    ],
    "typical_length": "3-5 bullet points"
  },
  "1.4 Dependencies": {
    "description": "Required systems and configurations",
    "should_include": [
      "Source system requirements",
      "Target system requirements",
      "Network requirements",
      "Security configurations",
      "Data prerequisites"
    ],
    "example_topics": [
      "Workday HCM operational with accurate data",
      "Vendor endpoint accessible and configured",
      "Network connectivity established",
      "Integration System User configured",
      "Security Groups configured",
      "Encryption keys exchanged"
    ],
    "typical_length": "5-8 bullet points"
  },
  "1.5 Legacy": {
    "description": "Previous integration details and decommission plan",
    "should_include": [
      "Previous source system",
      "Previous integration method",
      "Decommission date",
      "Transition strategy"
    ],
    "example_topics": [
      "PeopleXD to Workday transition",
      "Parallel running during cutover",
      "File naming to distinguish test/production",
      "Legacy decommission timeline"
    ],
    "typical_length": "2-4 bullet points or 'New integration' if none"
  },
  "2.1 GDPR": {
    "description": "Data protection compliance and controls",
    "should_include": [
      "Core compliance controls",
      "Data minimization approach",
      "Security measures",
      "Access controls",
      "Transparency measures"
    ],
    "example_topics": [
      "Data Minimization principles",
      "Purpose Limitation",
      "Encryption (in transit and at rest)",
      "RBAC and security groups",
      "Audit trail and logging",
      "Employee transparency and consent",
      "Data Processing Agreement requirements",
      "Special category data handling"
    ],
    "typical_length": "1-2 paragraphs"
  },
  "2.2 Sources": {
    "description": "Data origin systems and scope",
    "should_include": [
      "Primary source system",
      "Data elements included",
      "Data scope (which records)",
      "Data volume expectations"
